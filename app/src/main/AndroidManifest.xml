            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name=".activities.QuestionDetailActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name=".activities.PomodoroHubActivity"
