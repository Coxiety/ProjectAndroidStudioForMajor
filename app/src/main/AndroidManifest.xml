            android:screenOrientation="portrait"/>
        
        <activity
            android:name=".activities.PracticeTestConfigActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <activity
            android:name=".activities.PracticeTestActivity"
            android:exported="false"
            android:screenOrientation="portrait"/>
        
        <activity
